<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Article Registry</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/articles/save">
                <input class="form-control" type="text" name="title" placeholder="Define a tittle for the article">
                <br>
                <textarea class="form-control" placeholder="Type your article here!" name="body" id="body"></textarea>
                <br>
                <select name="category" class="form-control">
                    <% categories.forEach((category) =>{  %>
                        <option name="category" value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr code emoticons searchreplace wordcount autosave table insertdatetime media paste'
        ]
    })
</script>